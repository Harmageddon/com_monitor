<?xml version="1.0" encoding="utf-8"?>
<form>
	<fields name="filter">
		<field
			name="search"
			type="text"
			description="COM_MONITOR_FILTER_SEARCH_DESC"
			size="40"
			class="inputbox"
			default=""
		/>
	</fields>
	<fields name="list">
		<field
			name="fullordering"
			type="list"
			label="COM_MONITOR_LIST_FULL_ORDERING"
			description="COM_MONITOR_LIST_FULL_ORDERING_DESC"
			onchange="this.form.submit();"
			default="id ASC"
		>
			<option value="">COM_MONITOR_ORDER_BY</option>
			<option value="id ASC">COM_MONITOR_ORDER_ID_ASC</option>
			<option value="id DESC">COM_MONITOR_ORDER_ID_DESC</option>
			<option value="name ASC">COM_MONITOR_ORDER_PROJECT_ASC</option>
			<option value="name DESC">COM_MONITOR_ORDER_PROJECT_DESC</option>
		</field>
		<field
			name="limit"
			type="limitbox"
			class="input-mini"
			default="20"
			label="COM_CONTENT_LIST_LIMIT"
			description="COM_CONTENT_LIST_LIMIT_DESC"
			onchange="this.form.submit();"
		/><!-- TODO: Broken strings? -->
	</fields>
</form>
