<?xml version="1.0" encoding="utf-8"?>
<form>
	<fields name="filter">
		<field
			name="search"
			type="text"
			description="COM_MONITOR_FILTER_SEARCH_DESC"
			size="40"
			class="inputbox search-query"
			default=""
		/>
		<field
			name="issue_status"
			type="sql"
			query="SELECT id, name AS issue_status FROM #__monitor_status"
			key_field="id"
			label="COM_MONITOR_FILTER_STATUS_LABEL"
			hiddenLabel="true"
			description="COM_MONITOR_FILTER_STATUS_DESC"
			onchange="this.form.submit();"
		>
			<option value="">COM_MONITOR_FILTER_STATUS</option>
			<option value="open">COM_MONITOR_FILTER_STATUS_ALL_OPEN</option>
			<option value="closed">COM_MONITOR_FILTER_STATUS_ALL_CLOSED</option>
		</field>
		<field
			name="classification"
			type="classification"
			label="COM_MONITOR_FILTER_CLASSIFICATION_LABEL"
			description="COM_MONITOR_FILTER_CLASSIFICATION_DESC"
			onchange="this.form.submit();"
		>
			<option value="">COM_MONITOR_FILTER_CLASSIFICATION</option>
		</field>
		<field
			name="project_id"
			type="project"
			hiddenLabel="true"
			label="COM_MONITOR_FILTER_PROJECT_LABEL"
			description="COM_MONITOR_FILTER_PROJECT_DESC"
			onchange="this.form.submit();"
		>
			<option value="">COM_MONITOR_FILTER_PROJECT</option>
		</field>
		<field
			name="author"
			type="author"
			hiddenLabel="true"
			label="COM_MONITOR_FILTER_ISSUE_AUTHOR_LABEL"
			description="COM_MONITOR_FILTER_ISSUE_AUTHOR_DESC"
			onchange="this.form.submit();"
		>
			<option value="">JOPTION_SELECT_AUTHOR</option>
		</field>
	</fields>
	<fields name="list">
		<field
			name="fullordering"
			type="list"
			label="COM_CONTENT_LIST_FULL_ORDERING"
			description="COM_CONTENT_LIST_FULL_ORDERING_DESC"
			onchange="this.form.submit();"
			default="id ASC"
		>
			<option value="">JGLOBAL_SORT_BY</option>
			<option value="i.id ASC">JGRID_HEADING_ID_ASC</option>
			<option value="i.id DESC">JGRID_HEADING_ID_DESC</option>
			<option value="i.title ASC">JGLOBAL_TITLE_ASC</option>
			<option value="i.title DESC">JGLOBAL_TITLE_DESC</option>
			<option value="u.name ASC">JAUTHOR_ASC</option>
			<option value="u.name DESC">JAUTHOR_DESC</option>
			<option value="p.name ASC">COM_MONITOR_SORT_PROJECT_ASC</option>
			<option value="p.name DESC">COM_MONITOR_SORT_PROJECT_DESC</option>
		</field>
		<field
			name="limit"
			type="limitbox"
			class="input-mini"
			default="20"
			label="COM_CONTENT_LIST_LIMIT"
			description="COM_CONTENT_LIST_LIMIT_DESC"
			onchange="this.form.submit();"
		/><!-- TODO: Broken strings? -->
	</fields>
</form>
