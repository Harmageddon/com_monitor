<?xml version="1.0" encoding="utf-8"?>
<form addrulepath="/administrator/components/com_monitor/model/rules">
	<fieldset>
		<field
			name="id"
			type="hidden"
		/>
		<field
			name="name"
			type="text"
			label="COM_MONITOR_PROJECT_NAME_LABEL"
			description="COM_MONITOR_PROJECT_NAME_DESC"
			size="40"
			class="inputbox"
			default=""
			required="required"
			/>
		<field
			name="alias"
			type="alias"
			label="COM_MONITOR_PROJECT_ALIAS_LABEL"
			description="COM_MONITOR_PROJECT_ALIAS_DESC"
			hint="JFIELD_ALIAS_PLACEHOLDER"
			size="40"
			class="inputbox"
			default=""
			validate="alias"
			/>
		<field
			name="url"
			type="url"
			label="COM_MONITOR_PROJECT_URL_LABEL"
			description="COM_MONITOR_PROJECT_URL_DESC"
			size="40"
			class="inputbox"
			default=""
			validate="url"
			/>
		<field
			name="logo"
			type="media"
			label="COM_MONITOR_PROJECT_LOGO_LABEL"
			description="COM_MONITOR_PROJECT_LOGO_DESC"
			default=""
			validate="url"
			relative="true"
			/>
		<field
			name="logo_alt"
			type="text"
			label="COM_MONITOR_PROJECT_LOGO_ALT_LABEL"
			description="COM_MONITOR_PROJECT_LOGO_ALT_DESC"
			default=""
			/>
		<field
			name="description"
			type="editor"
			label="COM_MONITOR_PROJECT_DESCRIPTION_LABEL"
			description="COM_MONITOR_PROJECT_DESCRIPTION_DESC"
			class="inputbox"
			default=""
			filter="safehtml"
		/>
	</fieldset>
</form>
